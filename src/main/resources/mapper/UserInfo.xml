<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinamobile.foot.dao.UserInfoDao">

    <resultMap id="userMap" type="com.chinamobile.foot.bean.UserInfo">
        <result property="id" column="id" />
        <result property="username" column="username" />
        <result property="password" column="password" />
    </resultMap>

    <sql id="userDataColumn">
        username,
        password
    </sql>


    <insert id="insertData" parameterType="com.chinamobile.foot.bean.UserInfo">
        <selectKey keyColumn="id" keyProperty="id" order="AFTER" resultType="int">
            select  @@IDENTITY AS id
        </selectKey>
        INSERT INTO tb_userinfo(username,password) values(#{username},#{password})
    </insert>


    <select id="getData" resultType="com.chinamobile.foot.bean.UserInfo" parameterType="Map">
        select id,<include refid="userDataColumn" />
        from tb_userinfo
        <where>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
        </where>
    </select>

</mapper>